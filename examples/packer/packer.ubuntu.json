{
  "builders":[
    {
      "type": "docker",
      "image": "corbanr/ansible:2.8-ubuntu",
      "pull": false,
      "commit": false,
      "export_path": "ubuntu-test.tar",
      "changes": [
      "LABEL version=1.0"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "ansible-local",
      "playbook_file": "playbook.yml",
      "role_paths": [
        "{{template_dir}}/roles/common"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "rm -rf /tmp/packer-provisioner-ansible-local",
        "apt-get --purge remove python* --yes",
        "apt-get clean && apt-get autoremove --yes",
        "rm -rf /ansible-venv",
        "rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "localpacker/ubuntu-test",
      "tag": "0.1"
    }
  ]
}
